<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.byui.cit360.calculators.OhmsLaw">

    <EditText
        android:id="@+id/decVolt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:ems="5"
        android:inputType="numberDecimal"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/lblEmpty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/decVolt"
        android:layout_toEndOf="@+id/decVolt"
        android:layout_alignStart="@+id/lblEqual"
        android:layout_alignEnd="@+id/lblEqual" />

    <EditText
        android:id="@+id/decCur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/decVolt"
        android:layout_toEndOf="@+id/lblEmpty"
        android:ems="5"
        android:inputType="numberDecimal"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/decResist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/decVolt"
        android:layout_toEndOf="@+id/decCur"
        android:ems="5"
        android:inputType="numberDecimal"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/lblVolt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/decVolt"
        android:layout_alignStart="@+id/decVolt"
        android:layout_below="@+id/decVolt"
        android:labelFor="@+id/decVolt"
        android:text="@string/voltage"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/lblEqual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/lblVolt"
        android:layout_toEndOf="@+id/lblVolt"
        android:text="@string/equal" />

    <TextView
        android:id="@+id/lblCur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/lblVolt"
        android:layout_alignEnd="@+id/decCur"
        android:layout_alignStart="@+id/decCur"
        android:labelFor="@+id/decCur"
        android:text="@string/current"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/lblResist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/lblVolt"
        android:layout_alignEnd="@+id/decResist"
        android:layout_alignStart="@+id/decResist"
        android:labelFor="@+id/decResist"
        android:text="@string/resistance"
        android:textAlignment="center" />

    <Button
        android:id="@+id/btnCalc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/lblEqual"
        android:layout_below="@+id/lblVolt"
        android:onClick="onCalcClick"
        android:text="@string/calc" />

    <Button
        android:id="@+id/btnClear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnCalc"
        android:layout_toEndOf="@+id/btnCalc"
        android:onClick="onClearClick"
        android:text="@string/clear" />
</RelativeLayout>