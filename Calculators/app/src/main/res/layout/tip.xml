<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@android:color/white"
	android:clickable="true"
	android:orientation="vertical"
	tools:context="edu.byui.cit360.calculators.Tip">

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="horizontal">

		<TextView
			android:id="@+id/tipLblCost"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:labelFor="@+id/tipCurCost"
			android:text="@string/cost" />

		<EditText
			android:id="@+id/tipCurCost"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:ems="4"
			android:inputType="numberDecimal"
			android:textAlignment="textEnd" />
	</LinearLayout>

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="horizontal">

		<Button
			android:id="@+id/tipBtnCompute"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/tip" />

		<GridLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:columnCount="2">

			<TextView
				android:id="@+id/tipLbl12"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginEnd="10dp"
				android:text="@string/twelve"
				android:textAlignment="textEnd" />

			<TextView
				android:id="@+id/tipCur12"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textAlignment="textEnd" />

			<TextView
				android:id="@+id/tipLbl15"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginEnd="10dp"
				android:text="@string/fifteen"
				android:textAlignment="textEnd" />

			<TextView
				android:id="@+id/tipCur15"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textAlignment="textEnd" />

			<TextView
				android:id="@+id/tipLbl18"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginEnd="10dp"
				android:text="@string/eighteen"
				android:textAlignment="textEnd" />

			<TextView
				android:id="@+id/tipCur18"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textAlignment="textEnd" />
		</GridLayout>
	</LinearLayout>

	<Button
		android:id="@+id/tipBtnClear"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/clear" />
</LinearLayout>
